<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="2.5" client="site" method="upgrade">
    <name>mod_ostimer</name>
    <author>Joomlashack</author>
    <creationDate>November 01 2016</creationDate>
    <copyright>Copyright (C) 2016 Open Source Training, LLC</copyright>
    <license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
    <authorEmail>help@joomlashack.com</authorEmail>
    <authorUrl>http://www.joomlashack.com</authorUrl>
    <version>2.8.2b1</version>
    <variant>FREE</variant>
    <description>OSTIMER_SUCCESSFULLY_INSTALLED</description>

    <alledia>
        <element publish="true">ostimer</element>
        <namespace>OSTimer</namespace>
        <license>free</license>
        <relatedExtensions>
            <extension
                type="library"
                element="allediaframework">AllediaFramework</extension>

            <extension
                type="plugin"
                group="system"
                element="ossystem"
                publish="true"
                ordering="first">OSSystem</extension>
        </relatedExtensions>
        <include>AllediaFreeDefaultFiles</include>
    </alledia>

    <scriptfile>script.installer.php</scriptfile>

    <languages>
        <language tag="en-GB">language/en-GB/en-GB.mod_ostimer.ini</language>
        <language tag="en-GB">language/en-GB/en-GB.mod_ostimer.sys.ini</language>
        <language tag="es-ES">language/es-ES/es-ES.mod_ostimer.ini</language>
        <language tag="es-ES">language/es-ES/es-ES.mod_ostimer.sys.ini</language>
    </languages>

    <files>
        <filename module="mod_ostimer">mod_ostimer.php</filename>
        <filename>include.php</filename>
        <filename>index.html</filename>
        <folder>tmpl</folder>
        <folder>library</folder>
        <folder>form</folder>
        <folder>views</folder>
    </files>

    <media destination="mod_ostimer" folder="media">
        <folder>css</folder>
        <folder>js</folder>
        <folder>images</folder>
        <folder>fonts</folder>
    </media>

    <config>
        <fields name="params">
            <fieldset name="basic" addfieldpath="/modules/mod_ostimer/form/fields">
                <field type="subtitle" label="MOD_OSTIMER_EVENT" />

                <field
                    name="ev_dtitle"
                    type="radio"
                    class="btn-group"
                    default="1"
                    label="MOD_OSTIMER_DISPLAY_MOD_OSTIMER_EVENT_TITLE_LABEL"
                    description="MOD_OSTIMER_YES_OR_NO">

                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>

                <field
                    name="ev_tit"
                    type="text"
                    default="Event
                    Title..."
                    label="MOD_OSTIMER_EVENT_TITLE_LABEL"
                    description="MOD_OSTIMER_EVENT_TITLE_DESC"
                    size="40"/>

                <field
                    name="ev_ddate"
                    type="radio"
                    class="btn-group"
                    default="1"
                    label="MOD_OSTIMER_DISPLAY_EVENT_DATE_LABEL"
                    description="MOD_OSTIMER_DISPLAY_EVENT_DATE_DESC">

                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>

                <field
                    name="ev_ddate_format"
                    type="list"
                    default="1"
                    label="MOD_OSTIMER_DISPLAY_EVENT_DATE_FORMAT_LABEL"
                    description="MOD_OSTIMER_DISPLAY_EVENT_DATE_FORMAT_DESC">

                    <option value="1">MOD_OSTIMER_US_FORMAT_LABEL</option>
                    <option value="0">MOD_OSTIMER_INT_FORMAT_LABEL</option>
                    <option value="MOD_OSTIMER_DATE_FORMAT_LC1">MOD_OSTIMER_DATE_FORMAT_LC1_LABEL</option>
                    <option value="MOD_OSTIMER_DATE_FORMAT_LC2">MOD_OSTIMER_DATE_FORMAT_LC2_LABEL</option>
                    <option value="MOD_OSTIMER_DATE_FORMAT_LC3">MOD_OSTIMER_DATE_FORMAT_LC3_LABEL</option>
                    <option value="MOD_OSTIMER_DATE_FORMAT_LC4">MOD_OSTIMER_DATE_FORMAT_LC4_LABEL</option>
                </field>

                <field
                    name="ev_date"
                    type="calendar"
                    default="01-11-2017"
                    label="MOD_OSTIMER_DATE_LABEL"
                    description="MOD_OSTIMER_DATE_DESC"
                    format="%d-%m-%Y" />

                <field
                    name="ev_h"
                    type="text"
                    default="12"
                    label="MOD_OSTIMER_HOUR_LABEL"
                    description="MOD_OSTIMER_HOUR_DESC" />

                <field
                    name="ev_min"
                    type="text"
                    default="00"
                    label="MOD_OSTIMER_MINUTE_LABEL"
                    description="MOD_OSTIMER_MINUTE_DESC" />

                <field
                    name="timezone"
                    type="timezones"
                    default="UTC"
                    label="MOD_OSTIMER_TIMEZONE_LABEL"
                    description="MOD_OSTIMER_TIMEZONE_DESC" />

                <field
                    name="ev_dtime_format"
                    type="list"
                    default="MOD_OSTIMER_TIME_FORMAT_12H_UPPER"
                    label="MOD_OSTIMER_DISPLAY_EVENT_TIME_FORMAT_LABEL"
                    description="MOD_OSTIMER_DISPLAY_EVENT_TIME_FORMAT_DESC">

                    <option value="MOD_OSTIMER_TIME_FORMAT_12H_UPPER">MOD_OSTIMER_TIME_FORMAT_12H_UPPER_LABEL</option>
                    <option value="MOD_OSTIMER_TIME_FORMAT_12H_LOWER">MOD_OSTIMER_TIME_FORMAT_12H_LOWER_LABEL</option>
                    <option value="MOD_OSTIMER_TIME_FORMAT_24H">MOD_OSTIMER_TIME_FORMAT_24H_LABEL</option>
                </field>

                <field type="subtitle" label="MOD_OSTIMER_LAYOUT" />

                <field
                    name="layout"
                    type="modulelayout"
                    default="default"
                    label="MOD_OSTIMER_THEME_STYLE_LABEL"
                    description="MOD_OSTIMER_THEME_STYLE_DESC" />

                <field
                    name="ev_ddleft"
                    type="radio"
                    class="btn-group"
                    default="1"
                    label="MOD_OSTIMER_TIME_TO_EVENT_LABEL"
                    description="MOD_OSTIMER_TIME_TO_EVENT_DESC">

                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>

                <field
                    name="ev_dhour"
                    type="radio"
                    class="btn-group"
                    default="1"
                    label="MOD_OSTIMER_HOURS_MINUTES_TO_EVENT_LABEL"
                    description="MOD_OSTIMER_HOURS_MINUTES_TO_EVENT_DESC">

                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>

                <field
                    name="ev_js"
                    type="radio"
                    class="btn-group"
                    default="1"
                    label="MOD_OSTIMER_JAVASCRIPT_EFFECT_LABEL"
                    description="MOD_OSTIMER_JAVASCRIPT_EFFECT_DESC">

                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>

                <field
                    name="loadcss"
                    type="radio"
                    class="btn-group"
                    default="1"
                    label="MOD_OSTIMER_LOAD_MODULE_LABEL"
                    description="MOD_OSTIMER_LOAD_MODULE_DESC">

                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>

                <field
                    name="show_zero_day"
                    type="radio"
                    class="btn-group"
                    default="1"
                    label="MOD_OSTIMER_SHOW_ZERO_DAY_LABEL"
                    description="MOD_OSTIMER_SHOW_ZERO_DAY_DESC">

                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>

                <field
                    name="ev_color"
                    type="color"
                    default="#2B7CBE"
                    label="MOD_OSTIMER_NUMBER_COLOR_LABEL"
                    description="MOD_OSTIMER_NUMBER_COLOR_DESC" />

                <field
                    name="ev_dlink"
                    type="radio"
                    class="btn-group"
                    default="1"
                    label="MOD_OSTIMER_SHOW_LINK_LABEL"
                    description="MOD_OSTIMER_YES_OR_NO">

                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>

                <field
                    name="ev_l"
                    type="url"
                    default=""
                    label="MOD_OSTIMER_URL_LABEL"
                    description="MOD_OSTIMER_URL_DESC" />

                <field type="subtitle" label="MOD_OSTIMER_CUSTOM_TEXT" />

                <field
                    name="ev_endtime"
                    type="text"
                    default="Time's
                    Up"
                    label="MOD_OSTIMER_TIME_HAS_COME_LABEL"
                    description="MOD_OSTIMER_TIME_HAS_COME_DESC" />

                <field
                    name="ev_ltitle"
                    type="text"
                    default=""
                    label="MOD_OSTIMER_TEXT_URL_LABEL"
                    description="MOD_OSTIMER_TEXT_URL_DESC"
                    />

                <field
                    name="ev_trans_days"
                    type="text"
                    default="Days"
                    label="MOD_OSTIMER_TRANSLATE_DAYS_LABEL"
                    description="MOD_OSTIMER_TRANSLATE_DAYS_DESC" />

                <field
                    name="ev_trans_hr"
                    type="text"
                    default="Hr."
                    label="MOD_OSTIMER_TRANSLATE_HOURS_LABEL"
                    description="MOD_OSTIMER_TRANSLATE_HOURS_DESC" />

                <field
                    name="ev_trans_min"
                    type="text"
                    default="Min."
                    label="MOD_OSTIMER_TRANSLATE_MINUTES_LABEL"
                    description="MOD_OSTIMER_TRANSLATE_MINUTES_DESC" />

                <field
                    name="ev_trans_sec"
                    type="text"
                    default="Sec."
                    label="MOD_OSTIMER_TRANSLATE_SECONDS_LABEL"
                    description="MOD_OSTIMER_TRANSLATE_SECONDS_DESC" />

                <field
                    type="customfooter"
                    name="customfooter"
                    media="mod_ostimer"
                    showgoproad="1"
                    jedurl="http://extensions.joomla.org/extension/ostimer" />
            </fieldset>

            <fieldset name="advanced">
                <field
                    name="moduleclass_sfx"
                    type="textarea"
                    label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
                    description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC"
                    rows="3" />

                <field
                    name="cache"
                    type="list"
                    default="1"
                    label="COM_MODULES_FIELD_CACHING_LABEL"
                    description="COM_MODULES_FIELD_CACHING_DESC">

                    <option value="1">JGLOBAL_USE_GLOBAL</option>
                    <option value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
                </field>
            </fieldset>
        </fields>
    </config>

    <updateservers>
        <server type="extension" priority="1" name="OSTimer Module"><![CDATA[https://deploy.ostraining.com/client/update/free/stable/mod_ostimer]]></server>
    </updateservers>

</extension>
